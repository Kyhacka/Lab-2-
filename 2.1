open System

// Функция для получения списка длин строк
let getStringLengths (strList: string list) =
    strList |> List.map (fun s -> s.Length)

// Функция для ввода списка строк с клавиатуры
let inputStrings () =
    let rec readStrings (acc: string list) =
        printfn "Введите строку (или нажмите Enter для завершения):"
        let input = Console.ReadLine()
        if String.IsNullOrEmpty(input) then
            acc // Возвращаем накопленный список, если введена пустая строка
        else
            readStrings (input :: acc) // Добавляем строку в список и продолжаем

    readStrings [] // Начинаем с пустого списка
    |> List.rev // Переворачиваем список, чтобы порядок был как при вводе

// Основная программа
[<EntryPoint>]
let main argv =
    // Ввод списка строк
    let strings = inputStrings()

    // Получаем список длин строк
    let lengths = getStringLengths strings

    // Выводим результат
    printfn "Исходный список строк: %A" strings
    printfn "Список длин строк: %A" lengths

    0 // Возвращаем код завершения программы
